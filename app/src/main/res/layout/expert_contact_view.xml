<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_expert_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="28dp"
            android:textSize="24sp"
            tools:text="Mr. Expert"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_label_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="Phone"
            app:layout_constraintStart_toStartOf="@+id/text_expert_name"
            app:layout_constraintTop_toBottomOf="@+id/text_expert_name" />

        <TextView
            android:id="@+id/text_label_email"
            android:layout_width="41dp"
            android:layout_height="17dp"
            android:layout_marginTop="44dp"
            android:text="Email"
            app:layout_constraintStart_toStartOf="@+id/text_label_phone"
            app:layout_constraintTop_toBottomOf="@+id/text_label_phone" />

        <TextView
            android:id="@+id/text_expert_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            app:layout_constraintStart_toEndOf="@+id/text_label_phone"
            app:layout_constraintTop_toTopOf="@+id/text_label_phone"
            tools:text="+00 00 00 00 00 00" />

        <TextView
            android:id="@+id/text_epert_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            app:layout_constraintStart_toEndOf="@+id/text_label_email"
            app:layout_constraintTop_toTopOf="@+id/text_label_email"
            tools:text="mymail@expert.com" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
