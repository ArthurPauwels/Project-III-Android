<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/expertImage2"
            android:layout_width="162dp"
            android:layout_height="179dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/expert"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_expert_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="184dp"
            app:layout_constraintStart_toEndOf="@+id/text_label_profession2"
            app:layout_constraintTop_toTopOf="@+id/text_label_profession2"
            tools:text="Mr. Expert" />

        <TextView
            android:id="@+id/text_label_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="Profession"
            app:layout_constraintStart_toStartOf="@+id/text_label_profession2"
            app:layout_constraintTop_toBottomOf="@+id/text_label_profession2" />

        <TextView
            android:id="@+id/text_label_profession2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="168dp"
            android:text="Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_label_profession3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84dp"
            android:text="Expert Contat Info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.513"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_label_email"
            android:layout_width="41dp"
            android:layout_height="17dp"
            android:layout_marginTop="44dp"
            android:text="Email"
            app:layout_constraintStart_toStartOf="@+id/text_label_profession"
            app:layout_constraintTop_toBottomOf="@+id/text_label_profession" />

        <TextView
            android:id="@+id/text_expert_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/text_expert_name"
            app:layout_constraintTop_toTopOf="@+id/text_label_profession"
            tools:text="doctor" />

        <TextView
            android:id="@+id/text_epert_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:autoLink="email"
            app:layout_constraintEnd_toEndOf="@+id/text_expert_name"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/text_label_email"
            app:layout_constraintTop_toTopOf="@+id/text_label_email"
            tools:text="mymail@expert.com" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
